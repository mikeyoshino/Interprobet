@namespace Interprobet.Components


<div class="lg:pl-4 lg:pr-4 lg:pb-4  pl-0 pr-4 pb-4 z-40">
    <button @onclick="() => NavigateTo(Route)" class="lg:w-full w-24 lg:flex block lg:justify-start lg:pl-5 p-3 lg:p-0 items-center space-x-2  @Background rounded-2xl py-1 shadow-[0px_1px_25px_4px_rgba(0,0,0,0.75)]">
        <div class="lg:block hidden bg-gray-500 h-8 w-[2px] rounded-xl -ml-[14px]"></div>
        @if (IsRouteActive)
        {
            <Animation Effect="@Effect.ShakeY" Speed="@SlowSpeed" Delay="@Delay.None" IterationCount="-1">
                <div class="flex justify-center">
                    <img class="lg:w-14 lg:h-14 w-8 h-8" src="@IconPath" />
                </div>
            </Animation>
        }
        else
        {
            <div class="flex justify-center">
                <img class="lg:w-14 lg:h-14 w-8 h-8" src="@IconPath" />
            </div>
        }

        <div class="lg:text-sm text-xs font-light">
            @Text
        </div>
    </button>
</div>



